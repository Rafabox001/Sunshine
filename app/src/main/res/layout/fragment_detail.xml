<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22sp"
        android:paddingStart="16dp"
        android:id="@+id/list_item_forecast_date"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp"
        android:paddingStart="16dp"
        android:id="@+id/list_item_forecast_date2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:paddingStart="45dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="96sp"
                android:gravity="end"
                android:id="@+id/list_item_forecast_tempMax"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textSize="48sp"
                android:gravity="end"
                android:textColor="@color/gray"
                android:id="@+id/list_item_forecast_tempMin"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:gravity="center"
                android:id="@+id/weatherImage"
                android:background="@drawable/art_clear"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/gray"
                android:id="@+id/list_item_forecast_desc"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidity"
        android:textSize="22sp"
        android:paddingStart="16dp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressure"
        android:textSize="22sp"
        android:paddingStart="16dp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wind"
        android:textSize="22sp"
        android:paddingStart="16dp"
        android:fontFamily="sans-serif-light"/>



</LinearLayout>
